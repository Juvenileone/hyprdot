window{
  background-color: transparent;
  font-family: Source Code Pro;
  font-weight: bold;
  font-size: 24px;
  min-height: 30px;
}

.workspaces,
.tray {
  color: #D8DEE9;
}

.workspaces button.indicator {
    border-radius: 50%;
}

.workspaces button.focused {
  border: 3px solid #06A284;
}

.client-title {
    border-radius: 16px;
    background-color: #3B4252;
    padding:0 10px;
    margin-left: 10px;
    font-size: 20px;
}

.clock,
.battery {
    background-color: #3B4252;
    border-radius: 16px;
    margin-right: 5px;
    padding-left: 5px;
    padding-right: 5px;
}

.volume,
.temperature {
    background-color: #3B4252;
    border-top-right-radius: 16px;
    border-bottom-right-radius: 16px;
    margin-right: 5px;
    padding-right: 5px;
}

.brightness,
.memory {
    background-color: #3B4252;
    border-top-left-radius: 16px;
    border-bottom-left-radius: 16px;
    padding-left: 5px;
}

.cpu {
    background-color: #3B4252;
}


